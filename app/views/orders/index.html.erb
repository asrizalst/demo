<div class="container" id="rrder">
  <%= link_to 'New order', new_order_path %>
  <p id="notice"><%= notice %></p>
  
  <h1>Listing Products</h1>
  <div class="table-responsive" >
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Image url</th>
            <th>Color</th>
            <th>Price</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |product| %>
            <%= render product %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  
</div>
<br>